{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "es6": true
  },
  "rules": {
    "no-multiple-empty-lines": [2, { "max": 2 }],
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
